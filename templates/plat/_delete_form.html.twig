<form class="d-grid gap-2" method="post" action="{{ path('plat_delete', {'id': plat.id}) }}" onsubmit="return confirm('Êtes vous sûr.e de vouloir supprimer ce plat ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plat.id) }}">
    <button class="btn btn-outline-primary">Supprimer</button>
</form>
