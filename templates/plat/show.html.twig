{% extends 'base.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}
    <h1 class="text-center">Plat</h1>

    <div class="container">

        <table class="table table-primary table-striped align-middle">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ plat.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ plat.nom }}</td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>
                        {% if plat.Category.name is defined %}
                        {{ plat.Category.name }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ plat.description }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-grid gap-2">
            <div class="btn-group" role="group">
                <a class="btn btn-outline-primary" role="button" href="{{ path('plat_index') }}">Retour à la liste</a>
                <a class="btn btn-outline-primary" role="button" href="{{ path('plat_edit', {'id': plat.id}) }}">Editer</a>
            </div>
            {{ include('plat/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
